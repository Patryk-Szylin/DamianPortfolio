@model List<DamianPortfolio.Controllers.ProjectItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container wrapper">
    <div class="row">
        <div class="projects-container">
            @foreach (var project in Model)
            {
                <a class="project col-lg-4" href="@Url.Action("GetProjectByName", new {name = project.Name})">
                    <div>
                        <div class="project-image">
                            <img src="@project.ImageURL"/>
                        </div>
                    </div>
                    <div class="project-mask">
                        <div class="project-caption">
                            <div class="project-title">Love death and Robots</div>
                            <div class="project-subtitle">3Ds Max, Maya, Unreal Engine</div>
                        </div>
                    </div>
                </a>
            }
        </div>


    </div>
</div>

